<div class="row">
  <h2 class="small-12 columns">Holidays</h2>
  <div class="small-12 columns">
    <%= link_to 'New', new_holiday_path, class: 'button' %>
  </div>
  <div class="small-12 columns">
    <% if holidays.empty? %>
      <div data-alert class="alert-box info">
        No holidays created yet.
        <a href="#" class="close">&times;</a>
    </div>
    <% else %>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% holidays.each do |holiday| %>
            <td><%= holiday.name %></td>
            <td><%= holiday.email %></td>
            <td></td>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
