<div class="row">
  <h2 class="small-12 columns">
    <%= (holiday.new_record?)? 'Create': 'Edit' %>
  </h2>
</div>
<div class="row">
  <%= form_for holiday, html: { class: 'small-8 columns' } do |f| %>
    <%= render 'shared/error_messages', model: holiday %>

    <div>
      <%= label_tag do %>
        Name
        <%= f.text_field :name %>
      <% end %>
    </div>

    <div>
      <%= label_tag do %>
        Date
        <%= f.date_field :date %>
      <% end %>
    </div>

    <div>
      <%= f.submit "Create", class: 'button' %>
      <%= link_to 'Back', holidays_path %>
    </div>
  <% end %>
</div>
